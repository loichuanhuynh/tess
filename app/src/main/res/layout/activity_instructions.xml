<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A05120"
    tools:context="CreatePost.Instruction">


    <EditText
        android:id="@+id/instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:gravity="left"
        android:hint="Input Instruction here..."
        android:orientation="vertical"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteX="46dp"
        app:layout_editor_absoluteY="344dp"
        tools:ignore="MissingConstraints" />


        tools:layout_editor_absoluteY="175dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="176dp"
        android:layout_height="36dp"
        android:layout_marginBottom="4dp"
        android:background="#A05120"
        android:drawableRight="@drawable/back2"
        android:text="Continue"
        android:textColor="@color/white"
        app:backgroundTint="#A05120"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button5"
        android:layout_width="66dp"
        android:layout_height="33dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/white"
        app:backgroundTint="#A05120"
        android:drawableLeft="@drawable/back"
        android:gravity="left"
        android:background="#A05120"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/instruction"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="44dp"
        android:gravity="center"
        android:text="Back Ingredients post"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/instruction"
        app:layout_constraintStart_toEndOf="@+id/button5" />


</androidx.constraintlayout.widget.ConstraintLayout>